<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ivPhotoPreviewCart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tvPriceCart"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvShoeTitleCart"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvSizeCart"
        />

    <TextView
        android:id="@+id/tvSizeCart"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tvShoeTitleCart"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivPhotoPreviewCart" />

    <TextView
        android:id="@+id/tvShoeTitleCart"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/ivPhotoPreviewCart"
        android:textSize="20sp"
        tools:text="YEEZY 350 BOOST BRED V2"
        />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/remove"
        />

</RelativeLayout>