<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.reshoe_fbu.activities.EditDescription">

    <EditText
        android:id="@+id/etDescriptionSeller"
        android:layout_width="339dp"
        android:layout_height="230dp"
        android:layout_below="@+id/btnCancelDesc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="41dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Type Description Here..."
        android:inputType="textMultiLine"
        android:minLines="5"
        android:singleLine="false"
        android:textColor="#171616"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnEditDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescriptionSeller"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:text="@string/apply"
        />

    <Button
        android:id="@+id/btnCancelDesc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/cancel"
        />

</RelativeLayout>