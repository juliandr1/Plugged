<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reshoe_FBU" parent="@style/MyActionBarTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryAlt</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F09472</item>
        <item name="colorSecondaryVariant">#F6BFAB</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="android:actionBarTheme">@color/primary</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:textColorHint">@color/grey</item>

        <item name="android:editTextColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Reshoe_FBU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Reshoe_FBU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Reshoe_FBU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>